@using HW54_SimchaFund_Mar26.Models
@model List<IndexViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div id="simchas-index">

        <div class="header">
            <h1>Simchas</h1>
        </div>

        <div class="row header">
            <div class="col-md-4">
                <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="text-align:center;vertical-align:middle;">Contributions</th>
                    <th style="text-align:center;vertical-align:middle;">Simcha Name</th>
                    <th style="text-align:center;vertical-align:middle;">Contributor Count</th>
                    <th style="text-align:center;vertical-align:middle;">Total</th>
                    <th style="text-align:center;vertical-align:middle;">Date</th>
                </tr>
                @foreach (IndexViewModel vm in Model)
                {
                    <tr>
                        <td style="text-align:center;vertical-align:middle;">
                            <a class="btn btn-primary" href="/home/GetDonationsForSimcha?id=@vm.Simcha.Id" >Contributions</a>
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @vm.Simcha.Name
                        </td>

                        <td style="text-align:center;vertical-align:middle;">
                            @vm.AmountOfContributers/@vm.ContributerCount
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @vm.Simcha.Total
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @vm.Simcha.Date
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="addsimcha">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Simcha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/home/submitsimcha" method="post">
                <div class="modal-body">

                    <input type="text" name="name" id="name" placeholder="Simcha Name" />
                    <input type="date" name="date" id="date" />

                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" name="commit" type="submit" value="Save" id="submit">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="/Scripts/index.js"></script>
}

