@using HW54_SimchaFund_Mar26.Models
@using ClassLibrary1
@model Contributer 
@{
    ViewBag.Title = "ShowContributerHistory";
}

<div class="container">
    <div id="contributors-show">

        <div class="header">
            <h1>History for @Model.FirstName @Model.LastName</h1>
            <h3>Current Balance: $@Model.Balance</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr style="text-align:center;vertical-align:middle;">
                        <th style="text-align:center;vertical-align:middle;width:45%">Action</th>
                        <th style="text-align:center;vertical-align:middle;">Date</th>
                        <th style="text-align:center;vertical-align:middle;">Amount</th>
                    </tr>
                    @foreach (DepositDonation dd in Model.DepositDonations)
                    {
                        <tr>
                            <td style="text-align:center;vertical-align:middle;">
                               @dd.Action
                            </td>
                            <td style="text-align:center;vertical-align:middle;">
                                @dd.Date
                            </td>
                            <td style="text-align:center;vertical-align:middle;">
                               @dd.Amount
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
                    <div style="text-align:center;">
                        <a class="btn-lg btn-danger" href="/home/contributers">Back to Contributors</a>
                    </div>
            </div>

        </div>
     


